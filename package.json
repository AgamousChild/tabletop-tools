{
  "name": "tabletop-tools",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter nocheat-server --filter nocheat-client --filter versus-server --filter versus-client --filter listbuilder-server --filter listbuilder-client --filter tracker-server --filter tracker-client dev",
    "dev:nocheat": "pnpm --parallel --filter nocheat-server --filter nocheat-client dev",
    "dev:versus": "pnpm --parallel --filter versus-server --filter versus-client dev",
    "dev:listbuilder": "pnpm --parallel --filter listbuilder-server --filter listbuilder-client dev",
    "dev:tracker": "pnpm --parallel --filter tracker-server --filter tracker-client dev",
    "build": "pnpm -r --filter '*-client' build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild"]
  }
}
